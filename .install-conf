#!/bin/bash

if [[ ! -d ~/.config ]]; then
	mkdir ~/.config
fi

# VIM

if [[ -f ~/.vimrc ]]; then
	mv ~/.vimrc ~/.vimrc.bak
fi
cp ./.vimrc ~/.vimrc
VIMDIR=~/.vim
if [[ ! -d $VIMDIR ]]; then
	mkdir $VIMDIR
	echo "created $VIMDIR"
else 
	echo "$VIMDIR already existing"
fi
if [[ ! -d $VIMDIR/colors ]]; then
	mkdir $VIMDIR/colors
fi
git clone git clone git://github.com/chriskempson/base16-vim.git $VIMDIR/colors/base16
cp $VIMDIR/colors/base16/colors/*.vim $VIMDIR/colors/

# ZSH

if [[ -d ~/.zshrc ]]; then
	mv ~/.zshrc ~/.zshrc.bak
fi
cp ./.zshrc ~/.zshrc
git clone https://github.com/chriskempson/base16-shell.git ~/.config/base16-shell
if [[ -f ~/.zprofile ]]; then
	mv ~/.zprofile ~/.zprofile.bak
fi
cp ./zprofile ~/.zprofile

# i3

i3dir=~/.i3
if [[ -d $i3dir ]]; then
	mv $i3dir $i3dir.bak
fi
cp -r ./.i3 ~/

# RANGER
rangerdir=~/.config/ranger
if [[ -d $rangerdir ]]; then
	mv $rangerdir $rangerdir.bak
fi
cp -r ./.config/ranger ~/.config
